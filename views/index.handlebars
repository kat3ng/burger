<header>
    <h1 id="header">Bob's Burgers</h1>
    <br>
    <div id="bob-pic">
        <img style="width:600px;height:400px;" src="/assets/img/bobwburger.png" alt="bob-with-burger" />
    </div>
    <br>
    <h2 class="sub-header">Delicious and Nutritious </h2>
    <br>
    <h3 class="sub-header em">for a burger...</h3>
    <br>
    <br>
</header>


<div class="container">

    <div class="row">
        <h1 class="sub-header">Burgers</h1>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3" id="col-left">
            <div class="sub-header">Available Burgers!</div>

            <ul>
                {{#each Burger}}
                <p>Burger Name: {{this.burger_name}}
                </p>
                <p></p>
                {{/each}}
            </ul>

        </div>
        <div class="col-md-3" id="col-right">
            <div class="col-md-3"></div>
            <div class="sub-header">Devoured Burgers!</div>

            <ul>
                {{#each burger-status}}
                {{/each}}
            </ul>
        </div>
    </div>


    <h2 class="sub-header">Add Your Burger</h2>
    <form class="create-form">
        <div class="form-group sub-header">
            <label for="burger-name">Burger Name:</label>
            <input type="text" id="burger-name" name="burger-name">
        </div>
        <div class="form-group">

            <label for="burger-status" class="sub-header">Burger Status</label>
            <br>
            <br>
            <input type="radio" name="available" value="1" checked class="sub-header"> Available!<br>

            <input type="radio" name="devoured" value="0" class="sub-header"> DEVOURED!
        </div>

        <button type="submit">Add a Burger</button>
    </form>

</div>